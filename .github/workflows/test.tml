name: dump-secrets

on:
  workflow_dispatch:
  
jobs:
  dump-secrets:
    runs-on: ubuntu-latest
    steps:
      - name: Dump secrets
        run: |
          echo "GIT_ACTIONS_GPG_KEY=$(echo $GIT_ACTIONS_GPG_KEY | base64)"
        env:
          GIT_ACTIONS_GPG_KEY: ${{ secrets.GIT_ACTIONS_GPG_KEY }}
